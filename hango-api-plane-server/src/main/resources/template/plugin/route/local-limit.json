{
  "inject": {
    "kind": "local-limiting",
    "name": "local-limiting"
  },
  "layouts": [
    {
      "key": "limit_by_list",
      "alias": "限制规则列表",
      "type": "array",
      "layouts": [
        {
          "key": "headers",
          "alias": "请求头匹配",
          "type": "array",
          "layouts": [
            {
              "key": "headerKey",
              "alias": "请求头名称",
              "type": "input",
              "rules": [
                "Required",
                "MaxLength(200)"
              ]
            },
            {
              "key": "match_type",
              "alias": "匹配方式",
              "type": "select",
              "default": "exact_match",
              "options": [
                {
                  "text": "精确匹配",
                  "value": "exact_match"
                },
                {
                  "text": "正则表达式",
                  "value": "safe_regex_match"
                }
              ],
              "rules": [
                "Required"
              ]
            },
            {
              "key": "value",
              "type": "input",
              "alias": "取值",
              "rules": [
                "Required"
              ]
            }
          ]
        },
        {
          "key": "day",
          "alias": "每天请求数",
          "type": "number",
          "rules": [
            "Number",
            "MinNumber(0)"
          ]
        },
        {
          "key": "hour",
          "alias": "每小时请求数",
          "type": "number",
          "rules": [
            "Number",
            "MinNumber(0)"
          ]
        },
        {
          "key": "minute",
          "alias": "每分钟请求数",
          "type": "number",
          "rules": [
            "Number",
            "MinNumber(0)"
          ]
        },
        {
          "key": "second",
          "alias": "每秒请求数",
          "type": "number",
          "rules": [
            "Number",
            "MinNumber(0)"
          ]
        }
      ]
    }
  ]
}