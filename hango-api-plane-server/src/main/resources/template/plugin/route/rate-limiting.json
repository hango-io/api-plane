{
  "inject": {
    "kind": "rate-limiting",
    "name": "rate-limiting"
  },
  "layouts": [
    {
      "key": "limit_by_list",
      "alias": "限制规则列表",
      "type": "array",
      "layouts": [
        {
          "key": "headers",
          "alias": "请求头匹配",
          "type": "array",
          "help": "满足匹配条件的请求会进行流量控制",
          "layouts": [
            {
              "key": "headerKey",
              "alias": "请求头名称",
              "type": "input",
              "rules": [
                "Required",
                "MaxLength(200)"
              ]
            },
            {
              "key": "match_type",
              "alias": "匹配方式",
              "type": "select",
              "default": "exact_match",
              "options": [
                {
                  "text": "精确匹配",
                  "value": "exact_match"
                },
                {
                  "text": "前缀匹配",
                  "value": "prefix_match"
                },
                {
                  "text": "正则表达式",
                  "value": "safe_regex_match"
                },
                {
                  "text": "存在",
                  "value": "present"
                }
              ],
              "rules": [
                "Required"
              ]
            },
            {
              "key": "invert",
              "alias": "invert",
              "type": "radio",
              "default": "false",
              "help": "true: 对于满足该匹配条件的请求进行限流; false: 对于不满足该匹配条件的请求进行限流",
              "visible": {
                "this.match_type": "present"
              },
              "options": [
                "true",
                "false"
              ],
              "rules": [
                "Required"
              ]
            },
            {
              "key": "value",
              "type": "input",
              "alias": "取值",
              "invisible": {
                "this.match_type": "present"
              },
              "rules": [
                "Required"
              ]
            }
          ]
        },
        {
          "key": "day",
          "alias": "每天请求数",
          "type": "number",
          "rules": [
            "Number",
            "MinNumber(1)"
          ]
        },
        {
          "key": "hour",
          "alias": "每小时请求数",
          "type": "number",
          "rules": [
            "Number",
            "MinNumber(1)"
          ]
        },
        {
          "key": "minute",
          "alias": "每分钟请求数",
          "type": "number",
          "rules": [
            "Number",
            "MinNumber(1)"
          ]
        },
        {
          "key": "second",
          "alias": "每秒请求数",
          "type": "number",
          "rules": [
            "Number",
            "MinNumber(1)"
          ]
        }
      ]
    }
  ]
}