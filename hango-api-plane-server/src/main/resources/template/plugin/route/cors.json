{
  "formatter": {
    "kind": "cors",
    "corsPolicy": {
      "kind": "cors",
      "allowOriginRegex": "&allowOrigin",
      "allowMethods": "&allowMethods?",
      "allowHeaders": "&allowHeaders?",
      "exposeHeaders": "&exposeHeaders?",
      "allowCredentials": "&allowCredentials",
      "maxAge": "&maxAge?+s"
    },
    "maxAge": "&maxAge?"
  },
  "layouts": [
    {
      "key": "allowOrigin",
      "alias": "Allow-Origin",
      "help": "指示请求的资源能共享给哪些域",
      "placeholder":"请输入正则表达式",
      "type": "multi_input",
      "rules": [
        "MaxLength(200)",
        "Required",
        "[^\\*]"
      ]
    },
    {
      "key": "allowMethods",
      "alias": "Allow-Methods",
      "help": "指定对预请求的响应中，哪些HTTP方法允许访问请求的资源",
      "type": "multi_select",
      "default": [],
      "rules": [
        "Unique"
      ],
      "options": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE",
        "HEAD",
        "OPTIONS",
        "TRACE"
      ]
    },
    {
      "key": "allowHeaders",
      "alias": "Allow-Headers",
      "help": "用在对预请求的响应中，指示实际的请求中可以使用哪些HTTP头",
      "type": "multi_input",
      "rules": [
        "Unique",
        "MaxLength(200)"
      ]
    },
    {
      "key": "exposeHeaders",
      "alias": "Expose-Headers",
      "help": "指示哪些 HTTP 头的名称能在响应中列出",
      "type": "multi_input",
      "rules": [
        "Unique",
        "MaxLength(200)"
      ]
    },
    {
      "key": "allowCredentials",
      "alias": "Allow-Credentials",
      "help": "表示请求中是否允许发送Credentials，包含cookies, authorization headers 或 TLS client certificates",
      "type": "radio",
      "options": [
        "true",
        "false"
      ]
    },
    {
      "key": "maxAge",
      "alias": "Max-Age",
      "help": "指示预请求的结果能被缓存多久，单位秒",
      "type": "number",
      "rules": [
        "Number",
        "MinNumber(0)"
      ]
    }
  ]
}